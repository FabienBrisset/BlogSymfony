{% extends 'baseAdmin.html.twig' %}

{% block contenu %}
<div class="row">

		<!-- affichage de la liste des billets -->
		{% if liste is defined %}
			{% set cpt = 1 %}
			{% for billet in liste %}
				
				<!-- Blog Entries Column -->
				<div class="col-md-8">
					<h3>{{cpt}} |
						<a href="http://127.0.0.1/post/{{". billet.id ."}}">{{ billet.titre }} </a> |
						<span class="glyphicon glyphicon-time"></span> Posté le {{ billet.date|date('d/m/Y')}} |
						{{billet.contenu|slice(0, 50)}} | </h3>
						<a class="btn btn-primary" href="http://127.0.0.1:8000/post/{{billet.id}}" target = "blank">Voir en détail <span class="glyphicon glyphicon-chevron-right"></span></a>
						<a class="btn btn-info" href="http://127.0.0.1:8000/admin/modifierBillet/{{billet.id}}" target = "blank">Modifier <span class="glyphicon glyphicon-chevron-right"></span></a>
						<a class="btn btn-danger" href="http://127.0.0.1:8000/admin/supprimerBillet/{{billet.id}}" target = "blank">Supprimer <span class="glyphicon glyphicon-chevron-right"></span></a>
					<hr>

				</div>
			{% set cpt = cpt + 1 %}
			{% endfor %}
		{% endif %}
            
		<!-- si pas de liste, on affiche un message indiquant qu'il n'y a pas de billets -->
		{% if listeVide is defined %}
			<p class="lead">
				listeVide
			</p>
		{% endif %}
{% endblock %}

