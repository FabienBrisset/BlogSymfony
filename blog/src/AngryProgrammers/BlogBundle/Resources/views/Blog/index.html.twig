{% extends 'base.html.twig' %}

{% block contenu %}
        <div class="row">

		<!-- affichage de la liste des billets -->
		{% if liste is defined %}
			{% for billet in liste %}
			
				<!-- Blog Entries Column -->
				<div class="col-md-8">

					<h2>
						<a href="#">{{ billet.titre }}</a>
					</h2>
					
					<p><span class="glyphicon glyphicon-time"></span> Post√© le {{ billet.date|date('d/m/Y')}}</p>
					<hr>
						<img class="img-responsive" src={{asset(billet.getPhotoUploadDir) ~ '/' ~ billet.id ~ '_' ~ billet.photo}} alt="">
					<hr>
					<p>{{billet.contenu|slice(0, 50)}}</p>
					<a class="btn btn-primary" href="#">En lire plus <span class="glyphicon glyphicon-chevron-right"></span></a>

					<hr>

				</div>
			{% endfor %}
		{% endif %}
            
		<!-- si pas de liste, on affiche un message indiquant qu'il n'y a pas de billets -->
		{% if listeVide is defined %}
			<p class="lead">
				listeVide
			</p>
		{% endif %}
			
            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>A propos ...</h4>
                    <p>Le blog de Fabien, Pierre et Axel.</p>
                </div>

            </div>

        </div>
        <!-- /.row -->
{% endblock %}